{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'AoC-2024'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=AoC-2024",
                    "--package=AoC-2024"
                ],
                "filter": {
                    "name": "AoC-2024",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": ["rust"]
